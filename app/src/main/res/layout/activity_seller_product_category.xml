<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity">

   <TextView
       android:id="@+id/slogan_category"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:text="Add New Product"
       android:textAlignment="center"
       android:textSize="26sp"
       android:textStyle="bold"

       android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/tshirt"
            />
        <ImageView
            android:id="@+id/sport_t_shirts"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/sport"
            />
        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/female_dress"
            />
        <ImageView
            android:id="@+id/vestes"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/veste"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/glasses"
            />
        <ImageView
            android:id="@+id/bags"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/bags"
            />
        <ImageView
            android:id="@+id/hats"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/hats"
            />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/shoes"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/headphones"
            />
        <ImageView
            android:id="@+id/latops"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/laptops"
            />
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/mobiles"
            />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/watches"
            />

    </LinearLayout>

  
</RelativeLayout>